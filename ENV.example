# Bilan Server Configuration
# Copy this file to .env and update the values for your deployment

# Server Configuration
PORT=3002
NODE_ENV=production
HOST=0.0.0.0

# Database Configuration
# For SQLite (default - recommended for small deployments)
DB_PATH=./bilan.db

# For PostgreSQL (optional - for larger deployments)
# DATABASE_URL=postgresql://username:password@localhost:5432/bilan
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=bilan
# POSTGRES_USER=bilan
# POSTGRES_PASSWORD=your_secure_password

# Security Configuration
# Generate secure keys for production: openssl rand -hex 32
SESSION_SECRET=your-session-secret-change-this-in-production
JWT_SECRET=your-jwt-secret-change-this-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:3004,https://yourdomain.com
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/bilan.log

# Performance Configuration
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000

# Analytics Configuration (optional)
ANALYTICS_ENABLED=true
TELEMETRY_ENDPOINT=https://analytics.bilan.dev/events

# Dashboard Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3002
BILAN_PUBLIC_API_BASE_URL=http://localhost:3002

# Docker-specific Configuration
# Data volume path (for Docker deployments)
DOCKER_DATA_PATH=/app/data

# PostgreSQL Docker Configuration
POSTGRES_DOCKER_IMAGE=postgres:15-alpine
REDIS_DOCKER_IMAGE=redis:7-alpine

# Development Configuration
DEBUG=false
DEVELOPMENT_MODE=false

# Backup Configuration (future use)
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30 